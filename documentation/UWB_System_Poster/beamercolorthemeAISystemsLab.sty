% AI Systems Lab color theme

% ====================
% Definitions
% ====================

\definecolor{darkblue}{RGB}{52, 65, 81}
\definecolor{lightblue}{RGB}{77, 140, 176}  
\definecolor{sand}{RGB}{179, 132, 46}
\definecolor{darkgray}{RGB}{118, 118, 118}
\definecolor{lightgray}{RGB}{214, 214, 206}
\definecolor{almostwhite}{RGB}{252, 252, 252}
\definecolor{green}{RGB}{0, 151, 145}

% ====================
% Theme
% ====================
\setbeamercolor{background canvas}{bg=almostwhite}

% Basic colors
\setbeamercolor{palette primary}{fg=black,bg=almostwhite}
\setbeamercolor{palette secondary}{fg=black,bg=almostwhite}
\setbeamercolor{palette tertiary}{bg=black,fg=almostwhite}
\setbeamercolor{palette quaternary}{fg=black,bg=almostwhite}
\setbeamercolor{structure}{fg=green}

% Headline
\setbeamercolor{headline}{fg=almostwhite,bg=darkblue}
\setbeamercolor{headline rule}{bg=lightblue}

% Block
\setbeamercolor{block title}{fg=green,bg=almostwhite}
\setbeamercolor{block separator}{bg=darkblue}
\setbeamercolor{block body}{fg=darkblue,bg=almostwhite}

% Alert Block
\setbeamercolor{block alerted title}{fg=green,bg=lightgray}
\setbeamercolor{block alerted separator}{bg=darkblue}
\setbeamercolor{block alerted body}{fg=darkblue,bg=lightgray}

% Heading
\setbeamercolor{heading}{fg=darkblue}

% Itemize
\setbeamercolor{item}{fg=darkgray}

% Bibliography
\setbeamercolor{bibliography item}{fg=darkblue}
\setbeamercolor{bibliography entry author}{fg=darkblue}
\setbeamercolor{bibliography entry title}{fg=green}
\setbeamercolor{bibliography entry location}{fg=darkblue}
\setbeamercolor{bibliography entry note}{fg=darkblue}
